.span3
  #sidebar
    = image_tag 'b.png'
    %h1 Sign In

.span9
  #content
    = form_tag authenticate_account_path, :class => 'well' do |f|
      %h1 Sign in to goodbre.ws

      %p
        = text_field_tag :login, nil, :placeholder => 'email or username'
      %p
        = password_field_tag :password, nil, :placeholder => 'password'

      = submit_tag 'Sign In', :class => 'btn'

    = link_to 'Forgot your password?', new_password_reset_path
